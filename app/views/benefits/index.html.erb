<p id="notice"><%= notice %></p>

<p class="h2">
Mis Beneficios
<%= link_to '<button type="button" class="btn btn-primary btn-sm">Agregar beneficio</button>'.html_safe, new_user_benefit_path %>
</p>
<hr>
<% if @benefits.any? %>
  <% @benefits.each do |benefit| %>
    <div class="card" style="width: 18rem; margin-bottom: 20px; min-width: 500px;">
      <div class="card-body">
        <h5 class="card-title"><%= benefit.title %></h5>
        <p class="card-text"><%= benefit.description %></p>
        <hr>
        <%= link_to 'Ver', user_benefit_path(@user.id, benefit.id) %>
        <%= link_to 'Editar', edit_user_benefit_path(@user.id, benefit.id) %>
        <%= link_to 'Eliminar', user_benefit_path(@user.id, benefit.id), method: :delete, data: { confirm: 'Estas seguro?' } %>
      </div>
    </div>
  <% end %>
<% else %>
  No has agregado ningun beneficio a√∫n.
<% end %>

<br>
