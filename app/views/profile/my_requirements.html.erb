<h3>Solicitudes de patrocinio</h3>
<% @requirements.each do |r| %>
  <div class="row list-group-item border">
    <div class="row">
      <div class="col-5 m-auto text-center">
        <%= r.project %>
      </div>
      <div class="col m-auto text-center">
        <%= button_to t(:destroy), decline_sponsorship_path(requirement: { user_id: current_user.id, project_id: r.project.id }), class: 'btn btn-outline-success h-100 w-100' %>
      </div>
    </div>
  </div>
<% end %>
