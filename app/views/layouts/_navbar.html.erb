<ul class='nav sticky-top navbar-dark bg-dark p-2'>
  <a class="navbar-brand text-white font-weight-bold px-4" href="/"><%= t(:page_name)%></a>
  <%= form_tag(:projects, method: "get", class: 'form-inline mr-auto') do %>
    <div class="input-group">
      <%= text_field_tag(:search_text, "", class:"form-control", type: "search", placeholder:"Buscar proyectos sociales") %>
      <div class="input-group-append">
        <%= submit_tag("Buscar", class:"btn btn-outline-light") %>
      </div>
    </div>
  <% end %>
  <li class='nav-item'><%=link_to(t(:many, scope: %i[project name]), :projects, class: 'nav-link text-white font-weight-bold') %></li>
  <li class='nav-item'><%=link_to(t(:many, scope: %i[social_company name]), :social_companies, class: 'nav-link text-white font-weight-bold') %></li>
  <li class='nav-item border-right border-white'><%=link_to(t(:many, scope: %i[company name]), :companies, class: 'nav-link text-white font-weight-bold') %></li>
  <% if current_user %>
    <% if Rails.env.development? %>
      <li class='nav-item'><%=link_to("Mi Perfil (#{current_user.user_type})", :profile, class: 'nav-link text-white font-weight-bold') %></li>
    <% else %>
      <li class='nav-item'><%=link_to("Mi Perfil", :profile, class: 'nav-link text-white font-weight-bold') %></li>
    <% end %>
    <li class='nav-item'><%=link_to(t(:sign_out), :destroy_user_session, method: :delete, class: 'nav-link text-white font-weight-bold') %></li>
  <% else %>
    <li class='nav-item'><%=link_to(t(:sign_in), :new_user_session, class: 'nav-link text-white font-weight-bold') %></li>
    <li class='nav-item'><%=link_to(t(:sign_up), :new_user_registration, class: 'nav-link text-white font-weight-bold') %></li>
  <% end %>
</ul>
