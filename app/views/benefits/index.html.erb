<p id="notice"><%= notice %></p>

<h1>Benefits</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @benefits.each do |benefit| %>
      <tr>
        <td><%= benefit.title %></td>
        <td><%= benefit.description %></td>
        <td><%= benefit.company_id %></td>
        <td><%= link_to 'Show', company_benefit_path(@company.id, benefit.id) %></td>
        <td><%= link_to 'Edit', edit_company_benefit_path(@company.id, benefit.id) %></td>
        <td><%= link_to 'Destroy', company_benefit_path(@company.id, benefit.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Benefit', new_company_benefit_path %>
