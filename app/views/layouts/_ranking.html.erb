<div class="container p-3" style="margin-top: 10px;">
<h5 class="text-center" style="color: #406da1;">Top donantes</h5>
  <div class="card-group">
    <% @ranking.each do |c| %>
    <div class="card" style="border: 0px;">
      <div class="card-body p-1">
        <div class="row" style="height: 60px">
          <div class="col-auto m-auto">
            <%=image_tag c.avatar, style: 'max-width: 45px; max-height: 45px;'%>
          </div>
          <div class="col m-auto text-left">
            <a style="font-weight: 700; color: #406da1;"><%= c %></a><br>
            <%= currency_to_cl(c.total_donations) %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div style="border-top: 1px solid #C4C4C4; margin: auto; margin-top: 1px; width: 95%;"></div>
</div>
<div class="container">
<%= render 'layouts/alerts' %>
<%= yield %>
</div>
