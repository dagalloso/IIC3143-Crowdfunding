<%= form_with(model: project, local: true, url: (project.new_record? ? '/profile/projects' : "/profile/projects/#{project.id}")) do |form| %>
  <div class='form-group'>
    <%= form.label t(:name, scope: %i[project attributes]) %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>
  <div class='form-group'>
    <%= form.label t(:description, scope: %i[project attributes]) %>
    <%= form.text_area :description, class: 'form-control'%>
  </div>
  <%= form.submit t(:submit), class: 'btn btn-primary' %>
<% end %>
