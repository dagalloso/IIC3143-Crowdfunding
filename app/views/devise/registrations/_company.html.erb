<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.hidden_field :user_type, value: 'Company'%>
<div class='row'>
  <div class='col'>
    <h3>Datos de sesión</h3>
    <div class='form-group'>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email' %>
    </div>

    <div class='form-group'>
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, class: 'form-control', autocomplete: 'new-password' %>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'new-password' %>
    </div>
  </div>
  <div class="col">
    <h3>Información pública</h3>
    <div class="form-group">
      <%= f.label :avatar %>
      <div style='height: 200px'>
        <%=image_tag '/images/company-missing.jpg', class: 'mh-100', id: 'c-avatar-preview'%>
      </div>
      <div class='custom-file'>
        <%= f.label :avatar, t(:select_file_text), class: 'custom-file-label' %>
        <%= f.file_field :avatar, class: 'custom-file-input', onchange: "readURL(this, 'c-avatar-preview')" %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', placeholder: 'Cuentanos sobre tu empresa'%>
    </div>
  </div>
  <div class='col'>
    <h3>Información legal</h3>
    <div class='form-group'>
      <%= f.label :rut %>
      <%= f.text_field :rut, class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :validation %>
      <div class='custom-file'>
        <%= f.label :validation, t(:select_file_text), class: 'custom-file-label' %>
        <%= f.file_field :validation, class: 'custom-file-input'%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :compromise %>
      <div class="custom-file">
        <%= f.label :compromise, t(:select_file_text), class: 'custom-file-label'%>
        <%= f.file_field :compromise, class: 'custom-file-input'%>
      </div>
    </div>
  </div>
</div>

<%= f.submit t(:sign_up), class: 'btn btn-primary' %>
<% end %>
