<%= form_with(model: benefit, local: true, url: (benefit.new_record? ? :offered_benefits : benefit_path(benefit))) do |form| %>
  <div class='form-group'>
    <%= form.label t(:title, scope: %i[benefit attributes]) %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group''>
    <%= form.label t(:description, scope: %i[benefit attributes]) %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <%= form.submit t(:submit), class: 'btn btn-primary' %>
<% end %>
