<div class="row w-100">
  <div class="col-9">
    <%= render 'layouts/alerts' %>
    <div class="container px-5 py-4">
      <%= yield %>
    </div>
  </div>
  <div class="col-3 border-left">
    <div class="sidenav">
        <h4 class="text-center">Donadores destacados</h4>
        <ul class="list-group">
          <% @companies.each do |c| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-4 m-auto" style="height: 60px">
                <%=image_tag c.avatar, class: 'mh-100 mw-100'%>
              </div>
              <div class="col-5 m-auto text-center">
                <%= c.name %>
              </div>
              <div class="col-3 m-auto text-center">
                $ <%= @donated[c.id] + @sponsor_estimation[c.id] %>
              </div>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
